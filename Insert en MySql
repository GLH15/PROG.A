    conexion = engine.connect()

    df = pd.read_csv("datasets/Productos_limpios.csv")
    #if_exist = fail o append o replace
    df.to_sql("products", conexion, if_exists="replace", index=False, chunksize=100)
    conexion.commit()
    conexion.close()


